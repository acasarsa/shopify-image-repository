<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Post Album', post %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Post', new_post_path %>

<div>
  <h2>All Images</h2>
  <hr>
  <div>
    <% @posts.map do |post|  %>
      <% post.resized_images.each do |thumbnail| %>
      <div class="image-container">
        <h3>Album Title: <%= link_to post.title, post %> </h3>
        <div class="thumb">
          <%= link_to image_tag(thumbnail), post %>
        </div>
      </div>
      <hr>
      <% end %>
    <% end %>
  </div>
</div>
